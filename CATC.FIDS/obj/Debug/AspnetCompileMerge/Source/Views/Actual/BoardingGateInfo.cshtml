
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head lang="en">
    <meta charset="UTF-8">
    <meta http-equiv="x-ua-compatible" content="IE=Edge, chrome=1" />
    <meta name="renderer" content="webkit" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>登机口信息页面</title>
    <link href="~/Content/reset.css" rel="stylesheet" />
    <link href="~/Content/common.css" rel="stylesheet" />
    <link href="~/Content/boardingGateInfo.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/toastr.css" />
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/deparAirport-tab.css" />
    <link rel="stylesheet" href="~/Content/jquery-ui-1.10.4.custom.min.css" />
    <link rel="stylesheet" href="~/Content/menu.css" />
    <script src="~/Scripts/jquery-1.11.0.js"></script>
    <script src="~/Scripts/util.js"></script>
    <script src="~/Scripts/BootstrapMenu.min.js"></script>
    <script src="~/Scripts/global.js"></script>
    <script src="~/Scripts/jquery-ui-1.10.4.custom.min.js"></script>
    <script src="~/Scripts/toastr.js"></script>
    <script src="~/Scripts/layer/layer.js"></script>
    <script src="~/Scripts/boardingGateInfo.js"></script>
    <script>
        $(function () {
            //跑马灯效果
            util.dynamicCalcRem(1920);
            util.marquee('.flightRoute', 80);
            util.marquee('.flightRouteSpell', 80);
        });
    </script>
</head>
@Html.Raw(ViewBag.cstr)<body>
    <!-- 头部 start -->
    <div class="header clearfix">
        @Html.Raw(ViewBag.hstr)
    </div>
    <!-- 头部 end -->
    <!-- 主体显示区域 start -->
    <div class="main clearfix">
        <!-- 左半部分 start -->
        <div class="main-left">
            <div class="flightNum">CA1304</div>
            <div class="flightRoute">
                北京/乌鲁木齐
            </div>
            <div class="flightRouteSpell">Beijing/Wulumuqi</div>
        </div>
        <!-- 左半部分 end -->
        <div class="ext-line"></div>
        <!-- 右半部分 start -->
        <div class="main-right">
            <div class="planInfo">
                <div class="planInfo-name">计划/STD:</div>
                <div class="planInfo-con">11:30</div>
            </div>
            <div class="planInfo">
                <div class="planInfo-name">预计/ETD:</div>
                <div class="planInfo-con">-----</div>
            </div>
            <div class="planInfo">
                <div class="planInfo-name">关闭/CLOSED:</div>
                <div class="planInfo-con">11:30</div>
            </div>
            <div class="planInfo">
                <div class="planInfo-name">状态/STATUS:</div>
                <div class="planInfo-con">正在登机</div>
            </div>
            <div class="planInfo">
                <div class="planInfo-name">
                    <div>下一站航班:</div>
                    <div>NEXT FLIGHT</div>
                </div>
                <div class="planInfo-con">CA1256</div>
            </div>
        </div>
        <!-- 右半部分 end -->
    </div>
    <!-- 主体显示区域 end -->

</body>
</html>